<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManagement_api</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskManagement_api.styles.css" asp-append-version="true" />
    <style>
        /* Custom Styles for User ERP */

/* Navbar Styling */
.navbar {
    background-color: #343a40 !important;
    transition: background-color 0.3s ease-in-out;
}
.navbar .navbar-brand, 
.navbar .nav-link {
    color: #ffffff !important;
    transition: color 0.3s ease-in-out;
}
.navbar .nav-link:hover {
    color: #f8d210 !important;
    transform: scale(1.1);
}

/* Page Container */
.container {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    transition: all 0.3s ease-in-out;
    border:1px solid black;
}
.container:hover {
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    z-index:9999;
}

/* Card Styling */
.card {
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}
.card:hover {
    transform: translateY(-5px);
    box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
}

/* Table Styling */
.table {
    border-radius: 5px;
    overflow: hidden;
}
.table th {
    background-color: #007bff;
    color: white;
    text-align: center;
    transition: background-color 0.3s ease-in-out;
}
.table td {
    text-align: center;
}
.table-hover tbody tr {
    transition: background-color 0.3s ease-in-out;
}
.table-hover tbody tr:hover {
    background-color: #d4edda;
    transform: scale(1.02);
}

/* Buttons */
.btn {
    transition: all 0.3s ease-in-out;
}
.btn:hover {
    transform: scale(1.05);
}

/* Footer Styling */
.footer {
    background-color: #343a40;
    color: white;
    padding: 15px 0;
    text-align: center;
    transition: background-color 0.3s ease-in-out;
}
.footer a {
    color: #f8d210;
    transition: color 0.3s ease-in-out;
}
.footer a:hover {
    color: #ffffff;
}

/* Smooth Fade-in Animation */


.container, .card, .table, .footer {
    animation: fadeIn 0.5s ease-in-out;
}

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TaskManagement_api</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tasks" asp-action="Index">Tasks</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TaskManagement_api - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
